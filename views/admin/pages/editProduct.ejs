    <script>
        function removeImageConfirmation(imageId) {
            Swal.fire({
                title: "Remove Image?",
                text: "Are you sure you want to remove this image?",
                icon: "warning",
                showCancelButton: true,
                cancelButtonText: "No, Cancel",
                confirmButtonText: "Yes, Remove",
            }).then((result) => {
                if (result.isConfirmed) {
                    
                    removeImage(imageId);
                }
            });
        }
        </script>
        
